@model MDS.Models.MobTechLogin
@{
    ViewBag.Title = "Login";
    Layout = null;
}


@using (Html.BeginForm("TechLogin", "Mobile", FormMethod.Post, new { id = "TechLogin" }))
{
<table>
    <tr>
        <td colspan="2">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        </td>
    </tr>
    <tr>
        <td>
            <b>Engineer</b>
        </td>
        <td>
            @Html.DropDownListFor(model => model.EngineerID, new SelectList(ViewBag.EngineerIDX, "EngineerID", "EngineerName"), "-Select One-", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EngineerID, "", new { @class = "text-danger" })
        </td>

    </tr>
    <tr>
        <td>
            <b>Password</b>
        </td>
        <td>
            @Html.EditorFor(model => model.Password,  new { @class = "form-control", @type = "Password" } )
            @Html.ValidationMessageFor(model => model.EngineerID, "", new { @class = "text-danger" })
        </td>

    </tr>
    <tr>
        <td>

        </td>
        <td>
            <input type="submit" value="Save" style="color:black;text-decoration:underline" />

        </td>
    </tr>

</table>
}